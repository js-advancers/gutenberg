.wp-block-{{namespace}}-{{slug}} .recipe-image {
	background: #f1f1f1;
	float: right;
	width: 50%;
	min-height: 100px;
	text-align: center;
}

.wp-block-{{namespace}}-{{slug}} .recipe-image button {
	margin-top: 30px;
}

.wp-block-{{namespace}}-{{slug}} .recipe-image button.image-button {
	margin: 0;
	padding: 0;
	display: block;
}

.wp-block-{{namespace}}-{{slug}} .recipe-image img {
	display: block;
	z-index: 1;
	position: relative;
}

.wp-block-{{namespace}}-{{slug}} h2 {
	font-size: 1.5em;
}

.wp-block-{{namespace}}-{{slug}} ul {
	padding-left: 2.5em !important; /* Needs fix in Gutenberg. */
}

.wp-block-{{namespace}}-{{slug}}:after { 
	content:""; 
	clear:both; 
	display: table; 
}
